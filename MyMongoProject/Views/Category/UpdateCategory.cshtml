@model MyMongoProject.Dtos.CategoryDtos.GetByIdCategoryDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <h3>Kategori Güncelleme Sayfası</h3>
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />
        <label>Kategori Adı</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
        <br />
        <label>İkon</label>
        <input type="text" asp-for="CategoryIcon" class="form-control" />
        <br />
        <button class="btn btn-info">Kategori Güncelle</button>
    </form>
</div>
